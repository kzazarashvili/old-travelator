!!!
%html
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %title Travelator
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        = link_to 'Travelator', root_path, class: 'navbar-brand'
        %ul.navbar-nav
          - if user_signed_in?
            -if current_user.admin?
              %li.p-2.nav-item
                = link_to 'Admin panel', [:admin, @countries], class: 'nav-link'
              %li.p-2.nav-item
                %span.navbar-text= current_user.name
              %li.p-2.nav-item
                %img.rounded-circle{alt: "Profile image", src: "#{current_user.image}",style: "width:50px;height:50px;"}
              %li.p-2.nav-item
                = link_to t('.logout'), destroy_user_session_path, method: :delete, class: 'nav-link'
          - else
            %li.nav-item
              = link_to t('.login'), new_user_session_path, class: 'nav-link'
    = render 'layouts/flash'
    = yield

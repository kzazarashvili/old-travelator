.container
  .col-md-9
    %h2= t('.title')
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.label :email, t('.label.email')
        %br
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
      .form-group
        = f.label :password, t('.label.password')
        %br
        = f.password_field :password, autocomplete: 'current-password', class: 'form-control'
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me, t('.label.remember')
      .actions
        = f.submit t('.submit'), class: 'btn btn-primary'
    %br
    = link_to t('.sign-in.google'), user_google_oauth2_omniauth_authorize_path
    %br
    = link_to t('.sign-in.facebook'), user_facebook_omniauth_authorize_path
    %br
    %br
    = render 'devise/shared/links'

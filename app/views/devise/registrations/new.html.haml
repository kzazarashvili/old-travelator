.container
  .card.o-hidden.border-0.shadow-lg.my-5
    .card-body.p-0
      .row
        .col-lg-5.d-none.d-lg-block.bg-register-image
        .col-lg-7
          .p-5
            .text-center
              %h4.text-gray-900.mb-4= t('.title')
            .user
              = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal' }) do |f|
                .form-group
                  = f.input :name, autofocus: true, class: 'form-control', label: t('.label.username')
                .form-group
                  = f.input :email, autofocus: true, autocomplete: 'email', class: 'form-control', label: t('.label.email')
                .form-group.row
                  .col-sm-6.mb-3.mb-sm-0
                    = f.input :password, autocomplete: 'new-password', class: 'form-control', label: t('.character-limit', limit: @minimum_password_length)
                  .col-sm-6
                    = f.input :password_confirmation, autocomplete: 'new-password', class: 'form-control', label: t('.label.password_confirmation')
                .actions
                  = f.submit t('.submit'), class: 'btn btn-primary btn-user btn-block'
              %hr
                = link_to t('.sign-up.google'), user_google_oauth2_omniauth_authorize_path, class: 'btn btn-google btn-user btn-block'
                %br
                = link_to t('.sign-up.facebook'), user_facebook_omniauth_authorize_path, class: 'btn btn-facebook btn-user btn-block'
              %hr
              .text-center
                = render 'devise/shared/links'

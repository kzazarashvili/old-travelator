.container
  .col-md-9
    %h2= t('.title')
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render 'devise/shared/error_messages', resource: resource
      .form-group
        = f.label :email, t('.label.email')
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          = t('.hint.confirmation', email: resource.unconfirmed_email)
      .form-group
        = f.label :password, t('.label.password')
        %i= t('.hint.password')
        = f.password_field :password, autocomplete: 'new-password', class: 'form-control'
        - if @minimum_password_length
          %em
            = t('.character-limit', limit: @minimum_password_length )
      .form-group
        = f.label :password_confirmation, t('.label.password_confirmation')
        = f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'
      .form-group
        = f.label :current_password, t('.label.current_password')
        %i= t('.hint.password_confirmation')
        = f.password_field :current_password, autocomplete: 'current-password', class: 'form-control'
      .actions
        = f.submit t('.submit'), class: 'btn btn-primary'
    %h3= t('.title_cancel')
    %p
      = t('.unhappy')
      #{button_to t('.cancel'), registration_path(resource_name), data: { confirm: t('.confirm') }, method: :delete}
    = link_to t('.back'), :back
